@model List<AdminDashboard_UI.Models.Products>

@{
    ViewData["Title"] = "Dashboard";
}
<div class="text-center">
    <h1 class="display-4">Dashboard</h1>
</div>

<div>
    <p>Welcome to the Admin Dashboard. Here you can manage your products.</p>
</div>

<a asp-controller="Product" asp-action="AddProduct" class="btn btn-success">Add New Product</a>
<div>
    <h2>Product List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Color</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @{
                if(Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">No Products Available</td>
                    </tr>
                }
                else
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.Description</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Color</td>
                            <td><a asp-controller="Product" asp-action="DeleteProduct" class="btn btn-danger" asp-route-productid="@product.ProductId">Delete</a></td>
                            <td><a asp-controller="Product" asp-action="UpdateProduct" class="btn btn-primary" asp-route-productid="@product.ProductId">Update</a></td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>